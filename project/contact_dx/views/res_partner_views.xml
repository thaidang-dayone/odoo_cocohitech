<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit res.partner form view -->
    <record id="view_partner_form_inherit_supplier" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.supplier</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add is_supplier field -->
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_supplier"/>
                <field name="is_china_partner"/>
            </xpath>
            
            <!-- Add supplier products tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Supplier Products" invisible='not is_supplier'>
                    <field name="supplier_product_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="currency_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>